{% extends 'layouts/base.jinja2' %}

{% block title %}Sentencias{% endblock %}

{% block header %}
    <h2>Sentencias</h2>
{% endblock %}

{% block content %}
    <table id="resultadosDataTable" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Distrito</th>
                <th>Autoridad</th>
                <th>Fecha</th>
                <th>Sentencia</th>
                <th>Expediente</th>
                <th>P. de G.</th>
                <th>Archivo</th>
            </tr>
        </thead>
    </table>
{% endblock %}

{% block custom_javascript %}
    <script>
        $(document).ready(function() {
            $('#resultadosDataTable').DataTable({
                lengthChange: false,
                ordering: false,
                searching: false,
                serverSide: true,
                ajax: {
                    url: "http://localhost:8001/v2/sentencias",
                    type: "GET",
                    dataType: "json"
                },
                columns: [
                    { data: 'id' },
                    { data: 'distrito_nombre_corto' },
                    { data: 'autoridad_clave' },
                    { data: 'fecha' },
                    { data: 'sentencia' },
                    { data: 'expediente' },
                    { data: 'es_perspectiva_genero' },
                    { data: 'archivo' }
                ]
            });
        });
    </script>
{% endblock %}
