{% extends 'layouts/base.jinja2' %}

{% block title %}Abogados registrados{% endblock %}

{% block header %}
    <h2>Abogados registrados</h2>
{% endblock %}

{% block content %}
    <table id="resultadosDataTable" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Libro</th>
                <th>Numero</th>
                <th>Nombre</th>
            </tr>
        </thead>
    </table>
{% endblock %}

{% block custom_javascript %}
    <script>
        $(document).ready(function() {
            $('#resultadosDataTable').DataTable({
                lengthChange: false,
                ordering: false,
                searching: false,
                serverSide: true,
                ajax: {
                    url: "http://localhost:8001/v2/abogados",
                    type: "GET",
                    dataType: "json"
                },
                columns: [
                    { data: 'id' },
                    { data: 'fecha' },
                    { data: 'libro' },
                    { data: 'numero' },
                    { data: 'nombre' }
                ]
            });
        });
    </script>
{% endblock %}
