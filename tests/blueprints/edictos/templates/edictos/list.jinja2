{% extends 'layouts/base.jinja2' %}

{% block title %}Edictos{% endblock %}

{% block header %}
    <h2>Edictos</h2>
{% endblock %}

{% block content %}
    <table id="resultadosDataTable" class="table table-striped table-bordered" style="width: 100%;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Distrito</th>
                <th>Autoridad</th>
                <th>Fecha</th>
                <th>Descripcion</th>
                <th>Expediente</th>
                <th>No. Pub.</th>
                <th>Archivo</th>
            </tr>
        </thead>
    </table>
{% endblock %}

{% block custom_javascript %}
    <script>
        $(document).ready(function() {
            $('#resultadosDataTable').DataTable({
                lengthChange: false,
                ordering: false,
                searching: false,
                serverSide: true,
                ajax: {
                    url: "http://localhost:8001/v2/edictos",
                    type: "GET",
                    dataType: "json"
                },
                columns: [
                    { data: 'id' },
                    { data: 'distrito_nombre_corto' },
                    { data: 'autoridad_clave' },
                    { data: 'fecha' },
                    { data: 'descripcion' },
                    { data: 'expediente' },
                    { data: 'numero_publicacion' },
                    { data: 'archivo' }
                ],
                columnDefs: [
                    {
                        targets: 4,
                        data: null,
                        render: function(data, type, row, meta) {
                            if (data.length > 24) {
                                return '<span title="' + data + '">' + data.substring(0, 24) + '...</span>';
                            }
                            return data;
                        }
                    }
                ]
            });
        });
    </script>
{% endblock %}
